<%= search_form_for @q, :class => collapse_search_form, :id => "comments_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

  <div class="form-group">
    <%= f.label :pin_eq, "Pin" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :pin_eq, "1", checked: ((params[:q] && params[:q][:pin_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :pin_eq, "0", checked: ((params[:q] && params[:q][:pin_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :pin_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :schedule_time, "Schedule time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='schedule_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :schedule_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Schedule time greater than or equal to", :data => {:target => '#schedule_timegteqPicker'} %>
          <div class="input-group-append" data-target='#schedule_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#schedule_timegteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='input-group date' id='schedule_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :schedule_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Schedule time less than or equal to", :data => {:target => '#schedule_timelteqPicker'} %>
          <div class="input-group-append" data-target='#schedule_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#schedule_timelteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :schedule_date, "Schedule date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='schedule_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :schedule_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Schedule date greater than or equal to", :data => {:target => '#schedule_dategteqPicker'} %>
          <div class="input-group-append" data-target='#schedule_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='schedule_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :schedule_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Schedule date less than or equal to", :data => {:target => '#schedule_datelteqPicker'} %>
          <div class="input-group-append" data-target='#schedule_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#schedule_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#schedule_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#schedule_dategteqPicker').on("dp.change", function (e) {
              $('#schedule_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#schedule_datelteqPicker').on("dp.change", function (e) {
              $('#schedule_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :commenter_first_name_cont, "User first_name contains" %>
    <%= f.text_field :commenter_first_name_cont, :class => "form-control", :placeholder => "User first_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :photo_caption_cont, "Photo caption contains" %>
    <%= f.text_field :photo_caption_cont, :class => "form-control", :placeholder => "Photo caption contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/comments" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

