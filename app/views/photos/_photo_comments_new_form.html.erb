<!-- Form comment start -->
<%= form_with(model: @comment, local: true) do |f| %>
<!-- Form comment end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <%= f.label :body %>
    <!-- Input for body start -->
    <%= f.text_area :body, rows: "3", class: "form-control" %>
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for commenter_id start -->
  <div class="form-group">
    <%= f.label :commenter_id %>
    <!-- Input for commenter_id start -->
    <%= f.select :commenter_id, options_from_collection_for_select(User.all, :id, :first_name, @comment.commenter_id), {}, class: "form-control" %>
    <!-- Input for commenter_id end -->
  </div>
  <!-- Label and input for commenter_id end -->

  <!-- Label and input for photo_id start -->
  <!-- Input for photo_id start -->
  <%= f.hidden_field :photo_id, value: @photo.id %>
  <!-- Input for photo_id end -->
  <!-- Label and input for photo_id end -->

  <!-- Label and input for schedule_time start -->
  <div class="form-group">
    <%= f.label :schedule_time %>
    <!-- Input for schedule_time start -->
    <%= f.text_field :schedule_time, class: "form-control" %>
    <!-- Input for schedule_time end -->
  </div>
  <!-- Label and input for schedule_time end -->

  <!-- Label and input for pin start -->
  <div class="form-check">
    <!-- Input for pin start -->
    <%= f.check_box :pin, class: "form-check-input" %>
    <!-- Input for pin end -->
    <%= f.label :pin, class: "form-check-label" %>
  </div>
  <!-- Label and input for pin end -->

  <!-- Label and input for schedule_date start -->
  <div class="form-group">
    <%= f.label :schedule_date %>
    <!-- Input for schedule_date start -->
    <%= f.text_field :schedule_date, class: "form-control" %>
    <!-- Input for schedule_date end -->
  </div>
  <!-- Label and input for schedule_date end -->

  <%= f.submit "Create comment", class: "btn btn-block btn-outline-secondary" %>
<% end %>
